<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ComicStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/stripboeken.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow ml-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">ComicStore</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/MyCollection">Mijn collectie</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<body>

<div class="sidenav">
    <div class="form-group">
        <label for="sorting">Sorteren op...</label>
        <select class="form-control" id="sorting">
            <option value="ISBN">ISBN</option>
            <option value="title">Titel</option>
        </select>
    </div>
    <div class="form-group">
        <label for="search">Zoeken op...</label>
        <select class="form-control" id="search">
            <option value="ISBN">ISBN</option>
            <option value="title">Titel</option>
        </select>
    </div>
    <div>
        <div>
            <button type="button" class="btn btn-secondary btn-lg">Sorteer/zoek</button>

        </div>
    </div>
</div>

<div class="main">
    @RenderBody()
    
<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2022 - stripboeken - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </div>
</footer>
 </div>
   
</body>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>